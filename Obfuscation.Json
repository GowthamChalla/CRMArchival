
{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
   "ObfuscationCRMBaseUrl": 
    {      
      "type": "String",
      "metadata": { "description": "CRM url e.g., https://xxxx.crm.dynamics.com" } 
    },
    "Obfuscation-CRMUsername":
    {      
      "type": "String",  
      "metadata": { "description": "Enter the CRM User name which will be used to login to CRM having admin privileges" }
    },
    "Obfuscation-CRMPassword": 
    {      
      "type": "SecureString",
      "metadata": { "description": "Enter the Password of the CRM User name" } 
    },
    "keyVaultName": 
    {
      "type": "String",
      "defaultValue": "Obfuscationkeyvault",
      "metadata": { "description": "Enter the name you wish to give to the Key vault, Do not enter the name that already exists." }
    },
    "storageAccountName": 
    {      
      "type": "String",  
      "defaultValue": "Obfuscationstorageacc",
      "metadata": { "description": "Enter the name you wish to give to the Storage account.Maximum allowed characters are 24, Do not enter the name that already exists." }    
    },
    "NativeApplicationId": 
     { 
       "type": "String" 
     }, 
    "storageaccountType": 
    {      
     "defaultValue": "Standard_LRS",      
     "allowedValues": [ "Standard_LRS", "Standard_ZRS", "Standard_GRS", "Standard_RAGRS", "Premium_LRS" ],     
     "type": "String"    
    },  
    "ObjectId": 
     { 
      "type": "String" 
     }
  },
  "variables": {
    "KeyVaultName": "[parameters('keyVaultName')]",
    "storageaccountName": "[parameters('storageAccountName')]"
  },
  "resources": 
  [
    {
      "type": "Microsoft.KeyVault/vaults",
      "name": "[variables('KeyVaultName')]",
      "apiVersion": "2015-06-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "KeyVault"
      },
      "properties": {
        "tenantId": "[subscription().tenantId]",
        "accessPolicies": [
          {
            "tenantId": "[subscription().tenantId]",
            "objectId": "[parameters('ObjectId')]",
            "permissions": {
              "keys": [ "all" ],
              "secrets": [ "all" ]
            }
          }
        ],
        "enabledForTemplateDeployment": true,
        "sku": {
          "name": "Standard",
          "family": "A"
        }
      }
    },
    {      
        "type": "Microsoft.Storage/storageAccounts",      
        "name": "[variables('storageaccountName')]",      
        "apiVersion": "2015-06-15",      
        "location": "[resourceGroup().location]",      
        "tags": { "displayName": "storageaccount" },      
        "properties": { "accountType": "[parameters('storageaccountType')]" },      
        "dependsOn": []    
    },
    {  
       "type": "Microsoft.KeyVault/vaults/secrets",      
       "name": "[concat(variables('KeyVaultName'), '/','ObfuscationCRMBaseURL')]",      
       "apiVersion": "2015-06-01",      
       "properties": 
        {        
         "contentType": "text/plain",        
         "value": "[parameters('ObfuscationCRMBaseURL')]"      
        },      
        "dependsOn": [ "[concat('Microsoft.KeyVault/vaults/', variables('KeyVaultName'))]" ]    
     },
     {      
     "type": "Microsoft.KeyVault/vaults/secrets",      
     "name": "[concat(variables('KeyVaultName'), '/','Obfuscation-CRMUsername')]",      
     "apiVersion": "2015-06-01",      
     "properties": 
       {        
         "contentType": "text/plain",        
         "value": "[parameters('Obfuscation-CRMUsername')]"      
       },     
     "dependsOn": [ "[concat('Microsoft.KeyVault/vaults/', variables('KeyVaultName'))]" ]    
    },    
    {      
     "type": "Microsoft.KeyVault/vaults/secrets",      
     "name": "[concat(variables('KeyVaultName'), '/','Obfuscation-CRMPassword')]",      
     "apiVersion": "2015-06-01",      
     "properties": 
      {        
       "contentType": "text/plain",        
       "value": "[parameters('Obfuscation-CRMPassword')]"      
      },      
     "dependsOn": [ "[concat('Microsoft.KeyVault/vaults/', variables('KeyVaultName'))]" ]    
    }, 
    {      
        "type": "Microsoft.KeyVault/vaults/secrets",      
        "name": "[concat(variables('KeyVaultName'), '/','CRMAADClientId')]",      
        "apiVersion": "2015-06-01",      
        "properties":
         {        
          "contentType": "text/plain",       
          "value": "[parameters('NativeApplicationId')]"      
         },      
        "dependsOn": [ "[concat('Microsoft.KeyVault/vaults/', variables('KeyVaultName'))]" ]    
      }
  ]
}
