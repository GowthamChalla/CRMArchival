{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "hostingPlanName": {
      "minLength": 1,
      "type": "String",
      "defaultValue": "ObfuscationAppSrvPlan",
      "metadata": { "description": "obfuscation Application Service Plan Name" }
    },
    "skuName": {
      "defaultValue": "S3",
      "allowedValues": [ "B1", "B2", "B3", "S1", "S2", "S3", "P1", "P2", "P3", "P4" ],
      "type": "String",
      "metadata": { "description": "Describes plan's pricing tier and instance size. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/" }
    },
    "workerSize": {
      "type": "string",
      "allowedValues": [ "0", "1", "2" ],
      "defaultValue": "0",
      "metadata": {
        "description": "The instance size of the hosting plan (small, medium, or large)."
      }
    }
    },
   "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2016-12-01",
      "name": "[parameters('hostingPlanName')]",
      "location": "[resourceGroup().location]",
      "tags": { "displayName": "HostingPlan" },
      "properties": {
        "name": "[parameters('hostingPlanName')]",
        "sku": "[parameters('skuName')]",
        "workerSize": "[parameters('workerSize')]",
        "numberOfWorkers": 1
      }
    }
      
    ]
  }
